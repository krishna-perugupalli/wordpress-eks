    {
      "id": 8,
      "title": "Data Services Costs",
      "description": "Cost breakdown for data services (Aurora MySQL, ElastiCache Redis, EFS). Monitor for unexpected cost increases due to scaling or usage patterns.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 10
      },
      "targets": [
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Relational Database Service\"}",
          "legendFormat": "Aurora MySQL",
          "refId": "A"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon ElastiCache\"}",
          "legendFormat": "ElastiCache Redis",
          "refId": "B"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic File System\"}",
          "legendFormat": "EFS Storage",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
