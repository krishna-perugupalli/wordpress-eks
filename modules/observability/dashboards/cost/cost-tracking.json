{
  "id": null,
  "title": "Cost Tracking & Optimization",
  "description": "AWS cost tracking and optimization dashboard showing daily spending trends, cost breakdown by service, and resource utilization for rightsizing opportunities. Focuses on cost optimization and budget management for business decision-making.",
  "tags": [
    "aws",
    "cost",
    "billing",
    "optimization",
    "production",
    "monitoring",
    "budget"
  ],
  "timezone": "UTC",
  "refresh": "1h",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "1h",
      "6h",
      "12h",
      "1d"
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Overview",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 2,
      "title": "Daily AWS Spending - BUDGET CONTROL",
      "description": "Daily AWS spending trends - BUSINESS CRITICAL METRIC. BUDGET TARGET: <$100/day ($3000/month). WARNING: >$150/day indicates potential overrun. CRITICAL: >$200/day requires immediate cost optimization. Sudden spikes may indicate resource misconfiguration or unexpected scaling.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "aws_billing_estimated_charges_maximum",
          "legendFormat": "Daily Spend",
          "refId": "A"
        },
        {
          "expr": "avg_over_time(aws_billing_estimated_charges_maximum[7d])",
          "legendFormat": "7-day Average",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "min": 0,
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "orange",
                "value": 150
              },
              {
                "color": "red",
                "value": 200
              },
              {
                "color": "dark-red",
                "value": 300
              }
            ]
          },
          "custom": {
            "fillOpacity": 20
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "7-day Average"
            },
            "properties": [
              {
                "id": "custom.lineStyle",
                "value": {
                  "dash": [
                    10,
                    10
                  ]
                }
              },
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "purple"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Monthly Cost Projection",
      "description": "Estimated monthly cost projection based on current daily spending rate. Helps with budget forecasting and early warning for budget overruns.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 1
      },
      "targets": [
        {
          "expr": "aws_billing_estimated_charges_maximum * 30",
          "legendFormat": "Monthly Projection",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 3000
              },
              {
                "color": "red",
                "value": 6000
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Current Month Spend",
      "description": "Current month-to-date spending. Compare against monthly budget to track spending velocity and identify potential overruns early.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum(aws_billing_estimated_charges_maximum)",
          "legendFormat": "Month-to-Date",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 2000
              },
              {
                "color": "red",
                "value": 4000
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Breakdown",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 6,
      "title": "Cost by Service",
      "description": "Cost breakdown by AWS service (EKS, RDS, ElastiCache, EFS, ALB). Identify the highest cost contributors and focus optimization efforts on expensive services.",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 10
      },
      "targets": [
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic Kubernetes Service\"}",
          "legendFormat": "EKS",
          "refId": "A"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Relational Database Service\"}",
          "legendFormat": "RDS (Aurora)",
          "refId": "B"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon ElastiCache\"}",
          "legendFormat": "ElastiCache",
          "refId": "C"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic File System\"}",
          "legendFormat": "EFS",
          "refId": "D"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic Load Balancing\"}",
          "legendFormat": "ALB",
          "refId": "E"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 7,
      "title": "EKS Service Costs",
      "description": "Detailed EKS-related costs including compute, storage, and networking. Monitor EC2 instance costs for rightsizing opportunities.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 10
      },
      "targets": [
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic Kubernetes Service\"}",
          "legendFormat": "EKS Control Plane",
          "refId": "A"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic Compute Cloud - Compute\"}",
          "legendFormat": "EC2 Compute",
          "refId": "B"
        },
        {
          "expr": "aws_billing_estimated_charges_maximum{dimension_ServiceName=\"Amazon Elastic Block Store\"}",
          "legendFormat": "EBS Storage",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
