    {
      "id": 21,
      "title": "Networking",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 60
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 22,
      "title": "Ingress Controller Request Rate",
      "description": "Request rate processed by the ingress controller. Shows traffic volume and helps identify traffic patterns.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 61
      },
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_requests_total{namespace=\"kube-system\"}[5m])",
          "legendFormat": "{{ingress}} - {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      }
    },
    {
      "id": 23,
      "title": "Ingress Controller Response Time",
      "description": "Response time from ingress controller to backend services. High latency indicates performance issues in the request path.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 61
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=\"kube-system\"}[5m]))",
          "legendFormat": "95th Percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=\"kube-system\"}[5m]))",
          "legendFormat": "50th Percentile",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 24,
      "title": "Service Mesh Traffic",
      "description": "Inter-service communication metrics within the cluster. Shows service-to-service traffic patterns and health.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 69
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{namespace=\"wordpress\"}[5m])",
          "legendFormat": "Inbound - {{pod}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{namespace=\"wordpress\"}[5m])",
          "legendFormat": "Outbound - {{pod}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10000000
              },
              {
                "color": "red",
                "value": 50000000
              }
            ]
          }
        }
      }
    },
    {
      "id": 25,
      "title": "DNS Resolution Performance",
      "description": "CoreDNS performance metrics showing DNS query response times and success rates. Critical for service discovery.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 69
      },
      "targets": [
        {
