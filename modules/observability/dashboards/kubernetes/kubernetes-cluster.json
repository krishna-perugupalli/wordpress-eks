    {
      "id": 26,
      "title": "Cluster Health Summary",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 77
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 27,
      "title": "WordPress Workload Health Score",
      "description": "Composite health score for WordPress workloads. Combines pod health, resource utilization, and restart rates. Score below 80% indicates operational issues requiring attention.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 78
      },
