{
  "id": null,
  "title": "Kubernetes Cluster Overview",
  "description": "Comprehensive Kubernetes cluster monitoring dashboard showing cluster health, resource utilization, scaling activity, and networking performance. Focuses on WordPress workload monitoring and operational decision-making metrics for platform engineers.",
  "tags": [
    "kubernetes",
    "cluster",
    "production",
    "monitoring",
    "wordpress",
    "eks"
  ],
  "timezone": "UTC",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Overview",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 2,
      "title": "Cluster Status",
      "description": "Overall EKS cluster health status. 1 = healthy, 0 = unhealthy. Immediate attention required if cluster is unhealthy.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "up{job=\"kubernetes-apiservers\"}",
          "legendFormat": "API Server",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Down",
                  "color": "red"
                }
              },
              "type": "value"
            },
            {
              "options": {
                "1": {
                  "text": "Healthy",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Total Nodes",
      "description": "Total number of worker nodes in the cluster. Includes both managed node groups and Karpenter-provisioned nodes.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 1
      },
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Total Nodes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Ready Nodes",
      "description": "Number of nodes in Ready state. All nodes should be ready for optimal cluster operation.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 1
      },
      "targets": [
        {
          "expr": "count(kube_node_status_condition{condition=\"Ready\",status=\"true\"})",
          "legendFormat": "Ready Nodes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "WordPress Pod Health",
      "description": "Number of WordPress pods in Running state vs total desired. All pods should be running for full availability.",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 1
      },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"wordpress\",phase=\"Running\"})",
          "legendFormat": "Running Pods",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Resources",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 7,
      "title": "WordPress Pod CPU Usage - SCALING TRIGGER",
      "description": "WordPress pod CPU utilization - KEY SCALING METRIC. OPTIMAL: 40-70% allows headroom for traffic spikes. WARNING: >80% may cause response time degradation. CRITICAL: >90% triggers HPA scaling. Sustained high usage indicates need for vertical or horizontal scaling.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 10
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"wordpress\",container!=\"POD\",container!=\"\"}[5m]) * 100",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        },
        {
          "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"wordpress\",container!=\"POD\",container!=\"\"}[5m])) * 100",
          "legendFormat": "Average CPU Usage",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {
                "color": "blue",
                "value": null
              },
              {
                "color": "green",
                "value": 40
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "orange",
                "value": 80
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          },
          "custom": {
            "fillOpacity": 20,
            "gradientMode": "opacity"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Average CPU Usage"
            },
            "properties": [
              {
                "id": "custom.lineWidth",
                "value": 3
              },
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "purple"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 8,
      "title": "WordPress Pod Memory Usage",
      "description": "Memory utilization of WordPress pods. High memory usage (above 80%) may indicate memory leaks or need for scaling.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 10
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{namespace=\"wordpress\",container!=\"POD\",container!=\"\"} / container_spec_memory_limit_bytes{namespace=\"wordpress\",container!=\"POD\",container!=\"\"} * 100",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Node CPU Utilization",
      "description": "CPU utilization across all cluster nodes. High utilization may trigger Karpenter scaling or indicate resource constraints.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Node Memory Utilization",
      "description": "Memory utilization across all cluster nodes. High utilization may trigger node scaling or indicate memory pressure.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Scaling",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 12,
      "title": "Karpenter Node Scaling Events",
      "description": "Karpenter node provisioning and termination events. Shows cluster scaling activity in response to workload demands.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 27
      },
      "targets": [
        {
          "expr": "increase(karpenter_nodes_created_total[5m])",
          "legendFormat": "Nodes Created",
          "refId": "A"
        },
        {
          "expr": "increase(karpenter_nodes_terminated_total[5m])",
          "legendFormat": "Nodes Terminated",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "title": "Karpenter Node Pool Status",
      "description": "Status of Karpenter node pools showing capacity and utilization. Helps understand scaling behavior and resource allocation.",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 27
      },
      "targets": [
        {
          "expr": "karpenter_nodepool_usage",
          "legendFormat": "{{nodepool}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 14,
      "title": "Pod Restart Count - STABILITY INDICATOR",
      "description": "WordPress pod restarts - CRITICAL STABILITY METRIC. HEALTHY: 0 restarts in 24h. CONCERNING: >1 restart/hour indicates instability. CRITICAL: >3 restarts/hour suggests serious application or resource issues. Investigate OOMKilled, CrashLoopBackOff, or resource constraints.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 35
      },
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"wordpress\"}[1h])",
          "legendFormat": "{{pod}} - {{container}} (1h)",
          "refId": "A"
        },
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"wordpress\"}[24h])",
          "legendFormat": "{{pod}} - {{container}} (24h)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "orange",
                "value": 3
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          },
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "/.*24h.*/"
            },
            "properties": [
              {
                "id": "custom.axisPlacement",
                "value": "right"
              },
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "blue"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 15,
      "title": "Horizontal Pod Autoscaler Status",
      "description": "HPA scaling decisions for WordPress deployments. Shows current vs desired replica counts and scaling triggers.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 35
      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=\"wordpress\"}",
          "legendFormat": "Current Replicas - {{horizontalpodautoscaler}}",
          "refId": "A"
        },
        {
          "expr": "kube_horizontalpodautoscaler_status_desired_replicas{namespace=\"wordpress\"}",
          "legendFormat": "Desired Replicas - {{horizontalpodautoscaler}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      }
    },
    {
      "id": 16,
      "title": "Storage",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 43
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 17,
      "title": "EFS Storage Utilization",
      "description": "EFS filesystem utilization for wp-content volumes. Monitor for capacity planning and performance optimization.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 44
      },
      "targets": [
        {
          "expr": "aws_efs_total_io_bytes_sum",
          "legendFormat": "Total I/O Bytes - {{dimension_FileSystemId}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1000000000
              },
              {
                "color": "red",
                "value": 5000000000
              }
            ]
          }
        }
      }
    },
    {
      "id": 18,
      "title": "EFS Throughput",
      "description": "EFS read/write throughput for wp-content storage. High throughput may indicate performance bottlenecks or heavy usage.",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 44
      },
      "targets": [
        {
          "expr": "aws_efs_data_read_io_bytes_sum",
          "legendFormat": "Read Throughput - {{dimension_FileSystemId}}",
          "refId": "A"
        },
        {
          "expr": "aws_efs_data_write_io_bytes_sum",
          "legendFormat": "Write Throughput - {{dimension_FileSystemId}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100000000
              },
              {
                "color": "red",
                "value": 500000000
              }
            ]
          }
        }
      }
    },
    {
      "id": 19,
      "title": "Persistent Volume Claims",
      "description": "Status of PVCs in the WordPress namespace. All PVCs should be bound for proper application operation.",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 52
      },
      "targets": [
        {
          "expr": "kube_persistentvolumeclaim_info{namespace=\"wordpress\"}",
